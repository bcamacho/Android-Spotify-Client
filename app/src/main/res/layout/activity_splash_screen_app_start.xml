<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/rl1"
        >

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <com.brandycamacho.Spotify_Streamer.kbv.KenBurnsView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ken_burns_view"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                />
    </FrameLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:id="@+id/tv_appInfo"/>
    </RelativeLayout>

</RelativeLayout>

